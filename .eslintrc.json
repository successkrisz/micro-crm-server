{
  "parser"  : "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "standard",
  "plugins": [
    "babel",
    "promise"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "indent": ["error", 2],
    "max-len": [2, 120, 2],
    "generator-star-spacing": ["error", "before"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "single"],
    "semi": [2, "always"],
    "no-unused-vars": ["warn"]
  }
}
