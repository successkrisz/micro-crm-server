{
  "name": "mini-crm-server",
  "version": "1.0.0",
  "description": "mini crm server",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=dev nodemon src/index.js --exec babel-node",
    "build": "babel src -d build",
    "serve": "cross-env NODE_ENV=prod node build/index.js",
    "test": "cross-env NODE_ENV=test mocha --compilers js:babel-core/register --require ./test/test_helper.js --recursive",
    "test:wait": "cross-env NODE_ENV=test mocha --compilers js:babel-core/register --require ./test/test_helper.js --recursive --timeout 10000",
    "test:watch": "npm run test -- --watch",
    "db": "mongod --dbpath=./data"
  },
  "author": "Krisztian Balla",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-latest": "^6.16.0",
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "cross-env": "^3.1.4",
    "koa-logger": "^1.3.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "config": "^1.24.0",
    "immutable": "^3.8.1",
    "jsonwebtoken": "^7.2.1",
    "koa": "^2.0.0-alpha.7",
    "koa-bodyparser": "^2.3.0",
    "koa-cors": "0.0.16",
    "koa-router": "^7.0.1",
    "mongoose": "^4.7.6"
  }
}
