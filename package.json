{
  "name": "mini-crm-server",
  "version": "0.0.1",
  "description": "mini crm server",
  "main": "src/index.js",
  "engines": {
    "node": ">=5.2.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "clean": "rimraf build",
    "start": "better-npm-run start",
    "lint": "eslint src test config",
    "lint:watch": "esw --watch --color src test config",
    "lint:fix": "npm run lint -- --fix",
    "build": "npm run clean && babel src -d build",
    "serve": "better-npm-run serve",
    "test": "better-npm-run test",
    "test:wait": "npm run test -- --timeout 10000",
    "test:watch": "npm run test -- --watch",
    "db": "mongod --dbpath=./data"
  },
  "betterScripts": {
    "start": {
      "command": "nodemon bin/server.js --exec babel-node",
      "env": {
        "NODE_ENV": "dev",
        "DEBUG": "app:*"
      }
    },
    "serve": {
      "command": "node build/server.js",
      "env": {
        "NODE_ENV": "prod",
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "mocha --compilers js:babel-core/register --require ./test/test_helper.js --recursive",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/successkrisz/micro-crm-server.git"
  },
  "author": "Krisztian Balla <kriszi.balla@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-polyfill": "^6.20.0",
    "babel-preset-latest": "^6.16.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "chai-immutable": "^1.6.0",
    "cross-env": "^3.1.4",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "eslint-watch": "^2.1.14",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "better-npm-run": "0.0.14",
    "config": "^1.24.0",
    "debug": "^2.6.0",
    "immutable": "^3.8.1",
    "jsonwebtoken": "^7.2.1",
    "koa": "^2.0.0-alpha.7",
    "koa-bodyparser": "^2.3.0",
    "koa-convert": "^1.2.0",
    "koa-logger": "^1.3.1",
    "koa-router": "^7.0.1",
    "mongoose": "^4.7.6"
  }
}
